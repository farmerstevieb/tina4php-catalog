                    <div class="form-group col-md-6">
                <label for="productName">Product Name</label>
                <input class="form-control" type="text" id="productName"
                       name="productName" placeholder="Product Name"
                       value="{{ data.productName }}">
            </div>
                    <div class="form-group col-md-6">
                <label for="productDescription">Product Description</label>
                <input class="form-control" type="text" id="productDescription"
                       name="productDescription" placeholder="Product Description"
                       value="{{ data.productDescription }}">
            </div>
                    <div class="form-group col-md-6">
                <label for="productImage">Product Image</label>
                <input class="form-control" type="text" id="productImage"
                       name="productImage" placeholder="Product Image"
                       value="{{ data.productImage }}">
            </div>
                    <div class="form-group col-md-6">
                <label for="price">Price</label>
                <input class="form-control" type="text" id="price"
                       name="price" placeholder="Price"
                       value="{{ data.price }}">
            </div>
                    <div class="form-group col-md-6">
                <label for="inStock">In Stock</label>
                <input class="form-control" type="text" id="inStock"
                       name="inStock" placeholder="In Stock"
                       value="{{ data.inStock }}">
            </div>
            </div>
    {{"productsForm" | formToken | raw }}
</form>
