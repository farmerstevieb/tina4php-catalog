<body>
    <h3>ProductAttributeValues</h3>
    <table id="productAttributeValuesGrid" class="table table-striped table-bordered table-condensed" style="width:100%">
        <thead>
        <tr>
                            <th>Id</th>
                            <th>Product Attribute Id</th>
                            <th>Attribute Value</th>
                            <th>Attribute Value Order</th>
                        <th>Options</th>
        </tr>
        </thead>
    </table>
    <script>
        var productAttributeValuesGrid = null;
        $(document).ready(function () {
            productAttributeValuesGrid = $('#productAttributeValuesGrid').DataTable({
                dom: '<"row"<"col-md-6"B><"col-md-4"f><"col-md-2"l>><rtip>',
                ajax: {
                        url: '/catalog/product-attribute-values',
                        data: function (d) {
                            d.formToken = formToken;
                        }
                },
                columns: [
                                        {"data": "id"},
                                        {"data": "productAttributeId"},
                                        {"data": "attributeValue"},
                                        {"data": "attributeValueOrder"},
                                        {
                        "data": null,
                        "mRender": function (data, type, row) {
                            let html = '';
                            //loadForm parameters: api to retrieve modal form, target div id to load form to, row data, title of
                            html += '<button class="btn btn-primary small-button" onclick="showForm(\'edit\',\'/catalog/product-attribute-values/' + row.id + '?formToken={{ formToken ("/catalog/product-attribute-values") }}\')">Edit</button>';
                            html += ' <button class="btn btn-danger small-button" onclick="if (confirm(\'Delete  record ?\')) { showForm(\'delete\',\'/catalog/product-attribute-values/' + row.id + '?formToken={{ formToken ("/catalog/product-attribute-values") }}\');}">Del</button>';
                            return html;

                        },
                        "sClass": "text-right",
                        "searchable": false
                    }

                ],
                processing: true,
                serverSide: true,
                responsive: true,
                buttons: [
                    {
                        text: 'Create',
                        action: function (e, dt, node, config) {
                            let data = {};
                            showForm('create', '/catalog/product-attribute-values/form?formToken={{ formToken ("/catalog/product-attribute-values") }}');
                        }
                    },
                    'copy', 'excel', 'pdf', 'print'

                ]
            });
        });
    </script>
